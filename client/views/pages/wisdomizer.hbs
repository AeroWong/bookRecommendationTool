{{#with pageContent}}
<ul class="breadcrumbs level-2">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<div class="row">
    <div class="large-9 columns">
        <div class="row">
            <div class="large-3 columns">        
                <article class="article-card wisdomizer">
                    <img src="{{profilePic}}">
                    <div class="card-content">
                        <p class="post-author">{{name}}</p>
                    </div>
                </article>
            </div>
            <div class="small-9 columns">        
                <div class="recommendation-count">You've got {{recommendations.count}} recommendation(s) from {{name}}.</div>
                <div class="hook">
                    Wanna know {{name}} more? <br>
                    Check out {{pronoun}} <a href="{{site}}" target="_blank">site.</a>
                </div>
            </div>
        </div>
        <section class="content">
            <table>
                <thead>
                    <tr>
                        <th width="130">Book Cover</th>
                        <th width="300">Book Title</th>
                        <th width="200">Author</th>
                        <th>Wisdom's Origin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recommendations.books as | book |}}
                    <tr>
                        <td>
                            <a href="../{{book.alias}}"><img src="{{book.coverImage}}" alt=""></a>
                        </td>
                        <td><a href="../{{book.alias}}"><span>{{book.title}}</span></a></td>
                        <td>
                            {{#each book.authors as | author |}}
                            <span>{{author.name}}</span>
                            {{/each}}
                        </td>
                        <td>                            
                            {{wisdomizerName}} recommended it on
                            <a href="{{book.src}}" target="_blank"><span>{{book.srcTitle}}</span></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
        <div class="social-btn">
            <p class="instruction">Share Wisdom</p>
            {{> social_share}}        
        </div>
    </div>
    <div class="large-3 columns">
        {{> mailchimp}}
    </div>    
</div>
{{/with}}