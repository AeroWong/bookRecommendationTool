{{#with pageContent}}
<ul class="breadcrumbs level-2">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<div class="row">
    <div class="large-9 columns">
        <div class="row">
            <div class="large-3 columns">        
                <article class="article-card wisdomizer">
                    <img src="{{profilePic}}">
                    <div class="card-content">
                        <p class="post-author">{{name}}</p>
                    </div>
                </article>
            </div>
            <div class="small-9 columns">        
                <div class="recommendation-count">You've got {{recommendations.count}} recommendation(s) from {{name}}.</div>
                <div class="hook">
                    Wanna know {{name}} more? <br>
                    Check out {{pronoun}} <a href="{{site}}" target="_blank">site.</a>
                </div>
            </div>
        </div>
        <section class="content">
            <div class="table">
                <div class="table-col identity book-cover">Book Cover</div>
                <div class="table-col identity book-title">Book Title</div>
                <div class="table-col identity book-author">Author</div>
                <div class="table-col identity book-origin">Wisdom's Origin</div>
            </div>
            <ul class="table item">
                {{#each recommendations.books as | book |}}
                <li>
                    <div class="table-col book-cover">
                        <a href="../{{book.alias}}">
                            <img src="{{book.coverImage}}" alt="">
                        </a>
                    </div>
                    <div class="table-col book-title">
                        <a href="../{{book.alias}}">
                            <span>{{book.title}}</span>
                        </a>
                    </div>
                    <div class="table-col book-author">
                        {{#each book.authors as | author |}}
                        <span>{{author.name}}</span>
                        {{/each}}
                    </div>
                    <div class="table-col book-origin">                            
                        {{wisdomizerName}} recommended it on
                        <a href="{{book.src}}" target="_blank"><span>{{book.srcTitle}}</span></a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </section>
        <div class="social-btn">
            <p class="instruction">Share Wisdom</p>
            {{> social_share}}        
        </div>
    </div>
    <div class="large-3 columns">
        {{> mailchimp}}
    </div>    
</div>
{{/with}}