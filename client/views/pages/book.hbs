{{#with pageContent}}
<ul class="breadcrumbs book">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<div class="row">
    <div class="large-9 columns">
        <div class="row">
            <div class="large-3 columns book">
                <article class="article-card">
                    <img src="{{coverImage}}">
                </article>
            </div>
            <div class="large-9 columns">
                <div class="recommendation-count">{{title}}</div>
                <span class="by">by</span>
                <ul class="table-listing">
                    {{#each authors as | author |}}
                    <li>{{author.name}}</li>
                    {{/each}}
                </ul>        
                <div class="hook">
                    <div>
                        was recommended by {{recommendations.count}} wisdomizer(s) <br><br>
                        Wanna know more about the book? <br>
                        Check out its Amazon Page for detials<a href="{{amazonPage}}" target="_blank"> HERE.</a>
                    </div>
                </div>
                {{!-- GoodReads Want-To-Read Widget --}}                
                <div id="gr_add_to_books">
                    <div class="gr_custom_each_container_">
                        <a target="_blank" style="border:none" href="https://www.goodreads.com/book/isbn/{{isbn}}">
                            {{!-- <img alt="Harry Potter and the Goblet of Fire (Harry Potter, #4)" src="https://www.goodreads.com/images/atmb_add_book-70x25.png" /> --}}
                        </a>
                    </div>
                </div>    
            </div>
        </div>
        <section class="content">
            <table>
                <thead>
                    <tr>
                        <th>Wisdom's Origin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recommendations.wisdomizers as | wisdomizer |}}
                    <tr>
                        <td>
                            <a href="../{{wisdomizer.wisdomizerAlias}}"><span>{{wisdomizer.wisdomizerName}}</span></a>
                            recommended it on 
                            <a href="{{wisdomizer.src}}"><span>{{wisdomizer.srcTitle}}</span></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <div id="goodreads-widget">
                <div id="gr_header"><h1>Book's Reviews at Goodreads</h1></div>
                <iframe id="the_iframe" src="https://www.goodreads.com/api/reviews_widget_iframe?did=13091&format=html&header_text=Goodreads+reviews+for+The+Adventures+of+Huckleberry+Finn&isbn={{isbn}}&links=660&review_back=fff&stars=000&text=000" width="870" height="400" frameborder="0"></iframe>
                <div id="gr_footer">
                    <a class="gr_branding" target="_blank" href="https://www.goodreads.com/book/show/2956.The_Adventures_of_Huckleberry_Finn?utm_medium=api&utm_source=reviews_widget"></a>
                </div>
            </div>
        </section>
        <div class="social-btn">
            <p class="instruction">Share Wisdom</p>
            {{> social_share}}        
        </div>
    </div>
    <div class="large-3 columns">
        {{> mailchimp}}
    </div>
</div>
<!-- the identifier in the following script tag can be a GR book id or an isbn -->
<script src="https://www.goodreads.com/book/add_to_books_widget_frame/{{isbn}}?atmb_widget%5Bbutton%5D=atmb_widget_1.png"></script>
{{/with}}
