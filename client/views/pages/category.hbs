{{#with pageContent}}
<ul class="breadcrumbs level-2">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<div class="recommendation-count">You've got {{recommendations.count}} recommendation(s) from {{totalWisdomizer}} wisdomizer(s).</div>
{{/with}}
<div class="row">
    {{#with pageContent.recommendations}}
    <div class="large-9 columns">
        <section class="content">
            <div class="table">
                <div class="table-col identity book-cover">Book Cover</div>
                <div class="table-col identity book-title">Book Title</div>
                <div class="table-col identity book-author">Author</div>
                <div class="table-col identity book-origin">Wisdom's Origin</div>
            </div>
            <ul class="table item">
                {{#each books as | book |}}
                <li>
                    <div class="table-col book-cover">
                        <a href="../{{book.alias}}">
                            <img src="{{book.coverImage}}" alt="">
                        </a>
                    </div>
                    <div class="table-col book-title">
                        <a href="../{{book.alias}}">
                            {{book.title}}
                        </a>
                    </div>
                    <div class="table-col book-author">
                        <ul class="table-listing">
                            {{#each book.authors as | author |}}
                                <li style="background: transparent;">{{author.name}}</li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="table-col book-origin">
                        <ul class="table-listing">
                            {{#each book.wisdomizers as | wisdomizer |}}
                                <li style="background: transparent;">
                                    <a href="../{{wisdomizer.alias}}">{{wisdomizer.name}}</a> recommended it on <a href="{{wisdomizer.src}}" target="_blank">{{wisdomizer.srcTitle}}</a>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </li>                
                {{/each}}
            </ul>
        </section>
        <div class="social-btn">
            <p class="instruction">Share Wisdom</p>
            {{> social_share}}        
        </div>
    </div>
    {{/with}}
    {{#with pageContent}}
    <div class="large-3 columns">
        {{> mailchimp}}
    </div>
    {{/with}}
</div>