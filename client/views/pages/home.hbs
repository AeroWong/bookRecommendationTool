{{#with pageContent}}
<div class="recommendation-count home">You've got {{count}} recommendation(s) in {{currentMonth}}.</div>
{{/with}}
<div class="row">
    {{#with pageContent}}
    <div class="large-9 columns">
        <section class="content">
            <table>
                <thead>
                    <tr>
                        <th width="130">Book Cover</th>
                        <th width="250">Book Title</th>
                        <th width="200">Author</th>
                        <th>Wisdom's Origin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recommendations as | recommendation |}}
                    <tr>
                        <td>
                            <a href="{{recommendation.bookAlias}}">
                                <img src="{{recommendation.coverImage}}" alt="{{recommendation.bookTitle}}">
                            </a>
                        </td>
                        <td>
                            <a href="{{recommendation.bookAlias}}">
                                {{recommendation.bookTitle}}
                            </a>
                        </td>
                        <td>
                            <ul class="table-listing">
                            {{#each recommendation.authors as | author |}}
                                <li>{{author.name}}</li>
                            {{/each}}
                            </ul>
                        </td>
                        <td>
                            <ul class="table-listing">
                            {{#each recommendation.wisdomizers as | wisdomizer |}}
                                <li>
                                    <a href="../{{wisdomizer.alias}}">{{wisdomizer.name}}</a> recommended it on <a href="{{wisdomizer.src}}" target="_blank">{{wisdomizer.srcTitle}}</a>
                                </li>
                            {{/each}}
                            </ul>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
    <div class="large-3 columns">
        {{> mailchimp}}
    </div>
    {{/with}}
</div>
