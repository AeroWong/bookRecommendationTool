{{#with pageContent}}
<ul class="breadcrumbs">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<h1>You've got {{recommendations.count}} recommendations from {{totalEgghead}} wisdomizers</h1>
{{/with}}
{{#with pageContent.recommendations}}
<section class="content">
    <table>
        <thead>
            <tr>
                <th width="130">Book Cover</th>
                <th width="300">Book Title</th>
                <th width="200">Author</th>
                <th>Wisdom's Origin</th>
            </tr>
        </thead>
        <tbody>
            {{#each books as | book |}}
            <tr>
                <td>
                    <a href="../{{book.alias}}"><img src="{{book.coverImage}}" alt=""></a>
                </td>
                <td><a href="../{{book.alias}}"><span>{{book.title}}</span></a></td>
                <td>
                    {{#each book.authors as | author |}}
                    <span>{{author.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{#each book.eggheads as | egghead |}}
                    <p>
                        <a href="../{{egghead.alias}}"><span>{{egghead.name}}</span></a>
                        recommended it on
                        <a href="{{egghead.src}}"><span>{{egghead.srcTitle}}</span></a>
                    </p>
                    {{/each}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
{{/with}}