{{#with pageContent}}
<ul class="breadcrumbs">
    {{#each breadcrumbs as | breadcrumb |}}
        <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<h1>You've got {{recommendations.count}} recommendations</h1>
{{/with}}

{{#with pageContent.recommendations}}
<section class="content">
    {{#each books as | book |}}
    <p>{{book.no}}.\ 
        <span><a href="../{{book.alias}}">{{book.title}}</a></span>
        by 
        {{#each book.authors as | author |}}
            <span>{{author}}</span>
        {{/each}}
        {{#each book.eggheads as | egghead |}}
        <br>
        was recommended by <a href="../{{egghead.alias}}"><span>{{egghead.name}}</span></a> 
        on <a href="{{egghead.src}}"><span>{{egghead.srcTitle}}</span></a>
        {{/each}}
    </p>
    {{/each}}
</section>
{{/with}}