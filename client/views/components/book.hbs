{{#with pageContent}}
<ul class="breadcrumbs">
    {{#each breadcrumbs as | breadcrumb |}}
    <li><a href="{{breadcrumb.url}}">{{breadcrumb.name}}</a></li>
    {{/each}}
</ul>
<div class="row">
    <div class="small-3 columns">
        <article class="article-card">
            <img src="{{coverImage}}">
        </article>
    </div>
    <div class="small-9 columns">
        <h2>{{title}} by 
            {{#each authors as |author|}}
            <span>{{author.name}}</span>
            {{/each}}
        </h2>
        <h3>was recommended by {{recommendations.count}} wisdomizers</h3>
        <h3>Wanna know more about the book?</h3>
        <h3>Check out its Amazon Page <a href="{{amazonPage}}">HERE</a></h3>
    </div>
</div>
<section class="content">
    <table>
        <thead>
            <tr>
                <th>Wisdom's Origin</th>
            </tr>
        </thead>
        <tbody>
                {{#each recommendations.eggheads as |egghead|}}
            <tr>
                <td>
                    <p>{{egghead.eggheadName}} recommended it on 
                        <a href="{{egghead.src}}"><span>{{egghead.srcTitle}}</span></a>
                    </p>
                </td>
            </tr>
                {{/each}}
        </tbody>
    </table>
</section>
{{/with}}