{{#with pageContent}}
<h1>You've got {{count}} recommendations in {{currentMonth}}</h1>
{{/with}}
{{#with pageContent}}
<section class="content">
    <table>
        <thead>
            <tr>
                <th width="130">Book Cover</th>
                <th width="300">Book Title</th>
                <th width="200">Author</th>
                <th>Wisdom's Origin</th>
            </tr>
        </thead>
        <tbody>
            {{#each recommendations as | recommendation |}}
            <tr>
                <td>
                    <img src="{{recommendation.coverImage}}" alt="{{recommendation.bookTitle}}">
                </td>
                <td>
                    {{recommendation.bookTitle}}
                </td>
                <td>
                    {{#each recommendation.authors as | author |}}
                        <span>{{author.name}}</span>
                    {{/each}}
                </td>
                <td>
                    {{#each recommendation.eggheads as | egghead |}}
                    <p><a href="../{{egghead.alias}}"><span>{{egghead.name}}</span></a> recommended it on <a href="{{egghead.src}}"><span>{{egghead.srcTitle}}</span></a></p>
                    {{/each}}
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</section>
{{/with}}