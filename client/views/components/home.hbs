{{#with pageContent}}
<div class="recommendation-count home">You've got {{count}} recommendations in {{currentMonth}}.</div>
{{/with}}
<div class="row">
    {{#with pageContent}}
    <div class="large-9 columns">
        <section class="content">
            <table>
                <thead>
                    <tr>
                        <th width="130">Book Cover</th>
                        <th width="250">Book Title</th>
                        <th width="200">Author</th>
                        <th>Wisdom's Origin</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each recommendations as | recommendation |}}
                    <tr>
                        <td>
                            <img src="{{recommendation.coverImage}}" alt="{{recommendation.bookTitle}}">
                        </td>
                        <td>
                            {{recommendation.bookTitle}}
                        </td>
                        <td>
                            {{#each recommendation.authors as | author |}}
                                {{author.name}}<br>
                            {{/each}}
                        </td>
                        <td>
                            {{#each recommendation.eggheads as | egghead |}}
                            <a href="../{{egghead.alias}}">{{egghead.name}}</a> recommended it on <a href="{{egghead.src}}">{{egghead.srcTitle}}</a><br>
                            {{/each}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </section>
    </div>
    {{/with}}
    <div class="large-3 columns">
        <!-- Begin MailChimp Signup Form -->
        <div id="mc_embed_signup">
            <form action="//wisdomtrigger.us13.list-manage.com/subscribe/post?u=0d178833d66a5e0b82d3eabcb&amp;id=2da092c59f" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                <div id="mc_embed_signup_scroll">
                    <h2 class="sign-up-form text-1">
                        <span>Get Book Recommendations</span> 
                        <span class="from-wisdomizer">From 100 Wisdomizers</span>
                        <span>Monthly.</span>
                    </h2>
                    <div class="mc-field-group">
                    </label>
                        <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Your Email">
                    </div>
                    <div class="mc-field-group">
                        <input type="text" value="" name="FNAME" class="" id="mce-FNAME" placeholder="Your Name">
                    </div>
                    <div id="mce-responses" class="clear">
                        <div class="response" id="mce-error-response" style="display:none"></div>
                        <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_0d178833d66a5e0b82d3eabcb_2da092c59f" tabindex="-1" value=""></div>
                    <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button mailchimp"></div>
                    <h2 class="sign-up-form text-2">No spam, ever. <br> Emails are never shared.</h2>
                </div>
            </form>
        </div>
        <!--End mc_embed_signup-->
    </div>
</div>
